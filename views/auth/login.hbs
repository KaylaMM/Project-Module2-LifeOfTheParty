<div class="container">    
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Log In</div>
      </div>     
{{!-- ====================== SPACING BETWEEN PANEL AND INPUTS h======================== --}}
      <div style="padding-top:30px" class="panel-body">
          <div style="display:none" id="form-container" class="alert alert-danger col-sm-12"></div>
              <form class="auth-form" action="/auth/login" method="POST" id="form-container" enctype="multipart/form-data">
{{!-- ====================== Username ========================= --}}
      <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="Username">                                        
      </div>
{{!-- ====================== Password ========================= --}}                    
      <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <input id="login-password" type="password" class="form-control" name="password" placeholder="Password">
               <br>
                  {{#if message }}
                    <div class="error-message">{{ message }}</div>
                  {{/if}}
                <br>
      </div>                                   
{{!-- ====================== Button ========================= --}}  
      <div class="col-sm-12 controls">
          <button id="btn-login" type="submit" class="btn btn-success"> Log In </button>
      </div>
{{!-- ====================== Route to Login Page ========================= --}}  
      <div class="account-message">
        <p> Don't have an account? </p>
           <a id="btn-signup" href="/auth/signup" class="btn btn-success"> Sign Up </a>
      </div>
</div>
</form>     
</div>                     
</div>  
</div>
