     <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign Up</div>
                    </div>     

{{!-- ====================== SPACING BETWEEN PANEL AND INPUTS h======================== --}}

      <div style="padding-top:30px" class="panel-body">
          <div style="display:none" id="form-container" class="alert alert-danger col-sm-12"></div>
              <form class="auth-form" action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">

{{!-- ====================== Username ========================= --}}

      <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input id="signup-username" type="text" class="form-control" name="username" value="" placeholder="Usernamel">                                        
      </div>

{{!-- ======================== Email ========================== --}}

      <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <input id="signup-email" type="text" class="form-control" name="email" value="" placeholder="Email">                                        
      </div>

{{!-- ====================== Password ========================= --}}
                                
      <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <input id="signup-password" type="password" class="form-control" name="password" placeholder="Password">
      </div>
                                    
{{!-- ====================== Profile Image ========================= --}}

      <h4 for="avatar">Profile Image</h2>
         <input id="avatar" type="file" name="avatar">
         <br>
            {{#if message }}
               <div class="error-message">{{ message }}</div>
            {{/if}}
         <br>

{{!-- ====================== Button ========================= --}}  

      <div class="col-sm-12 controls">
          <a id="btn-login" href="#" class="btn btn-success"> Creat Account </a>
      </div>
      
{{!-- ====================== Route to Login Page ========================= --}}  
      <div class="account-message">
        <p> Do you already have an account? </p>
           <a id="btn-login" href="/auth/login" class="btn btn-success"> Login </a>
      </div>

</div>
</form>     
</div>                     
</div>  
</div>



