  {{!-- LINK TO USER PROFILE SNIPPIT --}}
  <link href="/stylesheets/userprofile.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark fixed-top">
    {{#if currentUser}}
    <a class="navbar-brand"><img id="brand-logo" src="/images/imageedit_1_2937631585.png" alt="user-logo"></a>
    <form action="/users/search" method="GET" class="form-inline">
      <input id="search-input" class="form-control mr-sm-2" name="username" type="text" placeholder="Search for users" aria-label="Search">
      <button class="btn my-2 my-sm-0 btn-primary" type="submit">Search</button>  
    </form>
    <div id="nav-bar-logged">
      <span id="nav-bar-text">Hi, {{ currentUser.username }}</span>
      <a class="active" href="/users/profile"><img class="profile-userpic-nav" src={{currentUser.avatar}} alt="avatar"></a>
      <a class="active" href="/users/profile">Profile</a>
      <a href="/auth/logout">Logout</a>
    </div>
    {{else}}
    <a href="auth/login">Login</a>
    <a href="auth/signup">Signup</a>
    {{/if}}
  </nav>
  {{{body}}}
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
