<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
        </div>
    </div>
</div>
<div class="card-columns m-5">
    {{#each memes}}
    <div class="card p-4">
        <img src="{{this.url}}" class="card-img-top m-2" alt="meme">
        <div class="m-3">
            <form method="POST" action="/boards/add-meme">
                <input type="hidden" id="hiddenInput" value="{{this.url}}" name="memeUrl">
                <select type="select" name="boardId" id="board-selector">
                    <option value=""></option>
                    {{#each ../userBoards}}
                    <option value="{{this._id}}">{{this.title}}</option>
                    {{/each}}
                </select>
                <button class="btn btn-secondary btn-sm" type="submit">Save meme to board</button>
            </form>
        </div>
        <ul class="nav navbar-nav"></ul>
        <a href="/">Home</a>

        <a class="active" href="/users/profile">Boards</a>


        {{#if currentUser}}
        <span>Hi, {{ currentUser.username }}</span>
        <a class="active" href="/users/profile"><img src={{currentUser.avatar}} alt="avatar" width="100px"
                height="100px"></a>
        <a href="/auth/logout">Logout</a>
        {{/if}}
        {{else}}
        <a href="auth/login">Login</a>
        <a href="auth/signup">Signup</a>
        </ul>
    </div>
</div>
</div>
