{{#if currentUser}}
<nav>
      <div>
        <a href="/">Home</a>
        <a href="/users/profile">Boards</a>
      </div>
      <div>
        {{#if currentUser}}
        <span>Hi, {{ currentUser.username }}</span>
        <a href="/users/profile"><img src={{currentUser.avatar}} alt="avatar" width="100px" height="100px"></a> 
        <a href="/auth/logout">Logout</a>
        {{else}}
        <a href="/auth/login">Login</a>
        <a href="/auth/signup">Signup</a>
        {{/if}}
      </div>
    </nav>
    <div class="card-columns m-5">
        {{#each memes}}
        <div class="card p-4">
            <img src="{{this.url}}" class="card-img-top m-2" alt="meme">
            <div class="m-3">
                <form method="POST" action="/boards/add-meme">
                    <input type="hidden" id="hiddenInput" value="{{this.url}}" name="memeUrl">
                    <select type="select" name="boardId" id="board-selector">
                        <option value=""></option>
                        {{#each ../userBoards}}
                            <option value="{{this._id}}">{{this.title}}</option>     
                        {{/each}}
                    </select>
                    <button type="submit">Save meme to board</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
{{/if}} 
{{#unless currentUser}}
    <a href="auth/login">Log In</a>
    <a href="auth/signup">Sign Up</a>
{{/unless}}
